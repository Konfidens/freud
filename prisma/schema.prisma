// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
// Necessary
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Datamodelling
model Message {
  id        Int      @id @default(autoincrement()) // createdAt er sikkert fornuftig
  role String
  content String
  sources Json
  chat   Chat   @relation(fields: [chatId], references: [id])
  chatId Int    
}

model UserFeedback {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  feedback  String
  comment_id Int
  createdAt DateTime @default(now())
  chat   Chat   @relation(fields: [chatId], references: [id])
  chatId Int  
}

model Chat {
  id        Int      @id @default(autoincrement())
  feedbacks UserFeedback[]
  messages Message[]
}

model TestTable {
  id      Int @id @default(autoincrement())
  name    String
  email   String
}